{
  "compilerOptions": {
    "outDir": "lib",
    "removeComments": true,
    "target": "ESNext",

    // Module resolution
    "baseUrl": "src-ts",
    "esModuleInterop": true,
    "moduleResolution": "node",

    // Source Map
    "sourceMap": true,
    "sourceRoot": "./src-ts",

    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    // Linter Checks
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src-ts/**/*.ts"],
  "exclude": [
    "node_modules/**/*"
  ]
}