{
  "compilerOptions": {
    "removeComments": true,
    "declaration": true,
    "baseUrl": "runner",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "./runner",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["runner/**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
